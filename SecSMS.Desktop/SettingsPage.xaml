<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SecSMS.Desktop.SettingsPage"
             Title="Settings">
    <VerticalStackLayout
        Padding="20"
        Spacing="16">
        <Label
            Text="Clipboard clear timeout (seconds)" />
        <Entry
            x:Name="TimeoutEntry"
            Keyboard="Numeric"
            Placeholder="30" />
        <Label
            Text="Show countdown" />
        <Switch
            x:Name="ShowCountdownSwitch" />
        <Button
            Text="Save"
            Clicked="OnSaveClicked" />
        <Label
            x:Name="SettingsStatusLabel"
            Text=""
            TextColor="Gray" />
    </VerticalStackLayout>
</ContentPage>
